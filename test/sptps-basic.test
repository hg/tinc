#!/bin/sh

# shellcheck source=testlib.sh
. "$TESTLIB_PATH"

echo [STEP] Skip this test if we did not compile sptps_test

test -e "$SPTPS_TEST" -a -e "$SPTPS_KEYPAIR" || exit $EXIT_SKIP_TEST

port=30080

echo [STEP] Generate keys

mkdir -p "$DIR_FOO"
$SPTPS_KEYPAIR "$DIR_FOO/server.priv" "$DIR_FOO/server.pub"
$SPTPS_KEYPAIR "$DIR_FOO/client.priv" "$DIR_FOO/client.pub"

echo [STEP] Test transfer of a simple file

reference=sptps-basic.test

(
  sleep 3
  $SPTPS_TEST -4 -q "$DIR_FOO/client.priv" "$DIR_FOO/server.pub" localhost $port <"$reference"
) &

$SPTPS_TEST -4 "$DIR_FOO/server.priv" "$DIR_FOO/client.pub" $port >"$DIR_FOO/out1"
diff -w "$DIR_FOO/out1" "$reference"

$SPTPS_TEST -4 -q "$DIR_FOO/server.priv" "$DIR_FOO/client.pub" $port <"$reference" &
sleep 3
$SPTPS_TEST -4 "$DIR_FOO/client.priv" "$DIR_FOO/server.pub" localhost $port >"$DIR_FOO/out2"
diff -w "$DIR_FOO/out2" "$reference"

echo [STEP] Datagram mode

$SPTPS_TEST -4 -dq "$DIR_FOO/server.priv" "$DIR_FOO/client.pub" $port <"$reference" &
sleep 3
sleep 3 | $SPTPS_TEST -4 -dq "$DIR_FOO/client.priv" "$DIR_FOO/server.pub" localhost $port >"$DIR_FOO/out3"
diff -w "$DIR_FOO/out3" "$reference"
